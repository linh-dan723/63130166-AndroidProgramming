<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:backgroundTint="@color/material_dynamic_neutral100"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        android:padding="8dp">

        <Button
            android:id="@+id/btnFunction2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Chức năng 2"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnFunction3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Chức năng 3"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnFunction4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Chức năng 4"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnAboutMe"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="About Me"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </GridLayout>
</LinearLayout>
